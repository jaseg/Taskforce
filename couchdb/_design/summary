{
	"_id":"_design/summary",
	"_rev":"REV",
	"language":"javascript",
	"views":{
		"by_tag":{
			"map":"function(doc){
				if(doc.type == \"node\"){
					emit(doc.id, {
							\"_id\":doc._id, 
							\"nodetype\":doc.nodetype,
							\"owner\":doc.owner,
							\"acl\":doc.acl,
							\"summary\":doc.data.summary
						},
						\"tags\":doc.tags
					);
					for(var i in doc.tags){
						emit(i, doc._id);
					}
				}
			}"
		},
		"by_owner":{
			"map":"function(doc){
				if(doc.type == \"node\"){
					emit(doc.owner, {
							\"_id\":doc._id,
							\"nodetype\":doc.nodetype,
							\"acl\":doc.acl,
							\"summary\":doc.data.summary,
							\"tags\":doc.tags
						}
					);
				}
			}"
		}
	}
}
